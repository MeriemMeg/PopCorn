<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bcgrd"
    tools:context="com.example.meriemmeguellati.cinema.Activities.MainActivity">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lattestMovies"
                android:layout_width="216dp"
                android:layout_height="37dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:fontFamily="casual"
                android:text="Mes Films"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                android:textStyle="bold" />


            <android.support.v4.view.ViewPager
                android:id="@+id/mes_films"
                android:layout_width="wrap_content"
                android:layout_height="333dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="30dp"
                android:paddingEnd="58dp"
                android:paddingLeft="120dp"
                android:paddingRight="120dp"
                android:paddingStart="58dp">

            </android.support.v4.view.ViewPager>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="227dp"
                android:layout_height="58dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="casual"
                android:text="Mes Feuilletons"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                android:textStyle="bold" />

            <android.support.v4.view.ViewPager
                android:id="@+id/mes_feuilletons"
                android:layout_width="wrap_content"
                android:layout_height="333dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="30dp"
                android:paddingEnd="58dp"
                android:paddingLeft="120dp"
                android:paddingRight="120dp"
                android:paddingStart="58dp">

            </android.support.v4.view.ViewPager>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="227dp"
                android:layout_height="58dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="casual"
                android:text="Mes salles"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                android:textStyle="bold" />

            <android.support.v4.view.ViewPager
                android:id="@+id/mes_salles"
                android:layout_width="wrap_content"
                android:layout_height="333dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="30dp"
                android:paddingEnd="58dp"
                android:paddingLeft="120dp"
                android:paddingRight="120dp"
                android:paddingStart="58dp">

            </android.support.v4.view.ViewPager>


        </LinearLayout>
    </ScrollView>
</FrameLayout>



